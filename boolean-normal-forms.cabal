name:                boolean-normal-forms
version:             0.0.0.1
synopsis:            Boolean normal form: NNF, DNF & CNF
description:         The provided types that might be useful in symbolic manipulation of propositional logic expressions.
homepage:            https://github.com/phadej/boolean-normal-forms
license:             MIT
license-file:        LICENSE
author:              Oleg Grenrus
maintainer:          Oleg Grenrus <oleg.grenrus@iki.fi>
copyright:           Â© Oleg Grenrus 2014
category:            Data
build-type:          Simple
cabal-version:       >=1.10
extra-source-files:  README.md
extra-doc-files:     doc-formulae/*.svg

library
  exposed-modules:
    Algebra.Boolean.NormalForms,
    Algebra.Boolean,
    Algebra.Negable,
    Algebra.Lattice.FreeLattice,
    Data.SetLike,
    Data.Conjunction,
    Data.Disjunction
  other-extensions:
    DeriveFunctor,
    DeriveDataTypeable,
    ConstraintKinds,
    TypeFamilies,
    ScopedTypeVariables
  build-depends:
    base >=4.6 && <4.10,
    containers >=0.5 && <0.6,
    lattices >=1.4 && <1.5,
    semigroups >=0.16 && <0.18,
    hashable >= 1.2 && <1.3,
    deepseq >=1.3 && <1.5,
    QuickCheck >=2.7 && <=2.9,
    unordered-containers >= 0.2 && <0.3,
    prelude-extras >=0.4 && <0.5
  default-language:    Haskell2010
  ghc-options:
    -Wall

test-suite test
  default-language:    Haskell2010
  type:                exitcode-stdio-1.0
  hs-source-dirs:      tests
  main-is:             Main.hs
  other-modules:
    BooleanLaws,
    LatticeLaws,
    NegableLaws,
    NNF,
    CNF,
    DNF
  ghc-options:
    -Wall
    -O2
    -fno-warn-orphans
  build-depends:
    base >=4.6 && <4.10,
    containers >= 0.5 && <0.6,
    cond >=0.4.1 && <0.5,
    tasty >=0.8,
    tasty-quickcheck >=0.8.0.2,
    QuickCheck >=2.7 && <=2.8,
    lattices,
    boolean-normal-forms
